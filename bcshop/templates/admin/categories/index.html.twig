{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    {#<style>#}
    {#    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }#}
    {#    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }#}
    {#</style>#}

    <div class="container">

        <table class="table table-striped">
            <thead>
            <tr>
                <th><strong>#</strong></th>
                <th><strong>Catégories</strong></th>
                <th><strong>Sous-catégories</strong></th>
            </tr>

            </thead>
            <tbody>
            {% for categorie in categories %}

                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.name }}</td>
                    <td>{{ categorie.animal.name }}</td>
                    <td class="d-flex"><a class="btn btn-primary" href="{{ path('categoriesEdit', {id:categorie.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('categoriesDelete', {id:categorie.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('categoriesNew') }}">Créer une nouvelle sous-catégorie</a>


        <a class="btn btn-warning" href="{{ path('admin') }}">Retour</a>

    </div>
{% endblock %}