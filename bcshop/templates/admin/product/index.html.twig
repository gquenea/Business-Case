{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Gestion des produits</h1>

    <div class="container">
        <table class="table table-striped">
            <thead>
            <tr>
                <th><strong>#</strong></th>
                <th><strong>Libell√©</strong></th>
                <th><strong>Prix</strong></th>
                <th><strong>Marque</strong></th>
                <th><strong>Stock</strong></th>
                <th><strong>Actif</strong></th>
                <th><strong>Categorie</strong></th>
            </tr>

            </thead>
            <tbody>
            {% for product in products %}

                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.brand }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.isActive }}</td>
                    <td>{{ product.category.name }}</td>
                    <td class="d-flex"><a class="btn btn-primary" href="{{ path('productsEdit', {id:product.id}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('productsDelete', {id:product.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('productsNew') }}">Ajouter un produit</a>


        <a class="btn btn-warning" href="{{ path('admin') }}">Retour</a>
    </div>

</div>
{% endblock %}
